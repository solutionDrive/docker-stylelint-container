{
  "rules": {
    "indentation":                                [ 4,        { "severity": "warning" }],
    "max-empty-lines":                            [ 2,        { "severity": "warning" }],
    "selector-list-comma-newline-after":          [ "always", { "severity": "warning" }],
    "number-leading-zero":                        [ "always", { "severity": "warning" }],
    "string-quotes":                              [ "single", { "severity": "warning" }],
    "font-family-no-duplicate-names":             [ true,     { "severity": "warning" }],
    "declaration-block-no-duplicate-properties":  [ true,     { "severity": "warning" }],
    "block-no-empty":                             [ true,     { "severity": "warning" }],
    "comment-no-empty":                           [ true,     { "severity": "warning" }],
    "string-no-newline":                          [ true,     { "severity": "warning" }],
    "length-zero-no-unit":                        [ true,     { "severity": "warning" }],
    "number-no-trailing-zeros":                   [ true,     { "severity": "warning" }],
    "font-weight-notation":                       [ "numeric",{ "severity": "warning" }],
    "declaration-empty-line-before":              [ "never",  { "severity": "error"   }],
    "declaration-colon-space-before":             [ "never",  { "severity": "error"   }],
    "declaration-colon-space-after":              [ "always", { "severity": "error"   }],
    "property-case":                              [ "lower",  { "severity": "error"   }],
    "color-no-invalid-hex":                       [ true,     { "severity": "error"   }],
    "unit-no-unknown":                            [ true,     { "severity": "error"   }],
    "at-rule-no-unknown":                         [ true,     { "severity": "error"   }],
    "property-no-unknown":                        [ true,     { "severity": "error"   }],
    "media-feature-name-no-unknown":              [ true,     { "severity": "error"   }],
    "selector-pseudo-class-no-unknown":           [ true,     { "severity": "error"   }],
    "selector-pseudo-element-no-unknown":         [ true,     { "severity": "error"   }],
    "selector-type-no-unknown":                   [ true,     { "severity": "error"   }],
    "no-empty-source":                            [ true,     { "severity": "error"   }],
    "no-invalid-double-slash-comments":           [ true,     { "severity": "error"   }],
    "shorthand-property-no-redundant-values":     [ true,     { "severity": "error"   }],
    "no-eol-whitespace":                          [ true,     { "severity": "error"   }],
    "no-unknown-animations":                      [ true,     { "severity": "error"   }],
    "no-extra-semicolons":                        [ true,     { "severity": "error"   }],
    "no-duplicate-selectors":                     [ true,     { "severity": "error"   }]
  }
}
